<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle" >@style/myActionBarStyle</item> 
        <item name="android:actionMenuTextAppearance">@style/AcBar_menuStyle</item>
    </style>

    <style name="myActionBarStyle" parent="android:Widget.ActionBar" >  
        <item name="android:background">#46A3FF</item>  
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item> 
         
    </style>  
    <style name="AcBar_titleStyle">  
        <item name="android:textSize">18sp</item>  
        <item name="android:textColor">#FFFFFF</item>  
    </style>  
    <style name="AcBar_menuStyle">  
        <item name="android:textSize">18sp</item>  
        <item name="android:textColor">#FFFFFF</item> 
    </style>  
</resources>
